#user-list

  %h1 Listing users

  %table
    %tr
      %th Name
    - for user in @users
      %tr
        %td&= user.name
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete

  %p= link_to 'New user', new_user_path
